isthe_latest_gid(GID) :- isa_validguesswithfb(GID), isTheLast(GID,gg).
isthe_first_gid(GID) :- isa_validguesswithfb(GID), isTheFirst(GID,gg).


minandmaxg(MINGN,MAXGN) :- isTheFirst(MINGN,gg), isTheLast(MAXGN,gg).

